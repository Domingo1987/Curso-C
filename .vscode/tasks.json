{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build_c",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-g",
          "*.c",
          "-o",
          "${fileDirname}\\main.exe"
        ],
        "options": {
          "cwd": "${workspaceFolder}\\DesafioEmpleados\\"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$gcc"
        ]
      },
      {
        "label": "build_cpp",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${workspaceFolder}/a.out"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always"
        },
        "problemMatcher": "$gcc"
      }
    ]
  }